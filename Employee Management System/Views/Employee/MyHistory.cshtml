@model IEnumerable<Tax>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contata</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Employee_Management_System.styles.css" asp-append-version="true" />
</head>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My History</h2>
        </div>
    </div>

    <!-- Check if there is data in the model -->
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>For Financial Year</th>
                    <th>Declaration Date</th>
                    <th>Declaration Status</th>
                    <th>View Form</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.FinancialYear</td>
                        <td width="50%">@obj.Date</td>
                        <td width="30%">@obj.Status</td>
                        <td width="30%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Employee" asp-action="ViewData" asp-route-TaxId="@obj.TaxId" class="text-dark"> <i class="bi bi-eye-fill ms-4 me-3" style="font-size:180%"></i></a>
                            </div>
                        </td>
                        <td width="30%">
                            @if (!obj.isSubmit)
                            {
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-TaxId="@obj.TaxId" class="btn btn-danger"> <i class="bi bi-trash3-fill"></i> </a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <!-- Display a message when no records are found -->
        <p>No records found.</p>
    }
</div>

@model Tax
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contata</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Employee_Management_System.styles.css" asp-append-version="true" />
</head>
<body>

    <h2 class="text-primary">View Form</h2>

    <div>
        <div>Employee ID: <span id="empId">@Model.EmpId</span></div>
        <div>Employee Name: <span id="empName">@Model.EmployeeName</span></div>
        <div>Financial Year: <span id="financialYear">@Model.FinancialYear</span></div>
    </div>

    <hr>

    <table class="table">
        <tbody>
            <tr>
                <td>
                    <label>1.Any other income (previous employement, income from house property, interest income etc.)</label>
                    <input name="OtherIncome" class="form-control" value="@Model.OtherIncome" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <h6>2. Investment under Section 80C</h6>
                    <label>a. Sukanya Samriddhi Account</label>
                    <input name="SukanyaSamriddhiAccount" class="form-control" value="@Model.SukanyaSamriddhiAccount" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>b. PPF / NSC / ULIP</label>
                    <input name="PPF_NSC_ULIP" class="form-control" value="@Model.PPF_NSC_ULIP" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>c. Life Insurance Premium</label>
                    <input name="LifeInsurancePremium" class="form-control" value="@Model.LifeInsurancePremium" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>d. Tuition Fee for Child"</label>
                    <input name="TuitionFee" class="form-control" value="@Model.TuitionFee" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>e. Bank Fixed Deposit(More than Five Years)</label>
                    <input name="BankFixedDeposit" class="form-control" value="@Model.BankFixedDeposit" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>f. Principal amount of housing loan paid during the year.</label>
                    <input name="PrincipalAmountHousingLoan" class="form-control" value="@Model.PrincipalAmountHousingLoan" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>3. National Pension Scheme 80CCD(1B)(Limit 50K)</label>
                    <input name="NationalPensionScheme" class="form-control" value="@Model.NationalPensionScheme" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>4. Higher Education Loan interest u/s 80E</label>
                    <input name="HigherEducationLoan" class="form-control" value="@Model.HigherEducationLoan" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>5. Interest paid on Housing Loan u/s 24</label>
                    <input name="InterestHousingLoan" class="form-control" value="@Model.InterestHousingLoan" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>6. Houser Rent paid every month(For above amt Rs 8333/-PAN</label>
                    <input name="HouseRent" class="form-control" value="@Model.HouseRent" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>7. Tax Deducted at Source by the previous employer or TDS deducted by any other person from your income.</label>
                    <input name="TDS" class="form-control" value="@Model.TDS" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>8. Medi-clain insuanrance policy-premium (80 D)</label>
                    <input name="MedicalClaim" class="form-control" value="@Model.MedicalClaim" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>9. Preventive Health check-up for Self &Aacute; Family (80D) (Limit 5K)</label>
                    <input name="HealthCheckup" class="form-control" value="@Model.HealthCheckup" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <input asp-for="LTAReimbursement" type="checkbox" class="form-check-input" disabled>
                    <label asp-for="LTAReimbursement" class="form-check-label" value="@Model.LTAReimbursement">LTA (Do you want LTA as a reimbursement?)</label>
                </td>
            </tr>
            <tr>
                <td>
                    <input asp-for="EducationAllowanceReimbursement" type="checkbox" class="form-check-input" disabled>
                    <label asp-for="EducationAllowanceReimbursement" class="form-check-label" value="@Model.EducationAllowanceReimbursement">education Allowance (Do you want Edu Allowance as a reimbursement?)</label>
                    @* <span asp-validation-for="SukanyaSamriddhiAccount" class="text-danger"></span> *@
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        <div>Name of the Staff : @Model.EmployeeName</div>
                        <div>PAN No : @ViewBag.Pan</div>
                    </div>
                </td>
                <td>
                    <div>
                        <div>Staff No : @Model.EmpId</div>
                        <div>Address : @ViewBag.Address</div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>
